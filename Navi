#QUESTÃO 3
import numpy as np

notas = [5, 3, 10, 2, 6]

alunos = {
   "aluno 1": notas[0],
   "aluno 2": notas[1],
   "aluno 3": notas[2],
   "aluno 4": notas[3],
   "aluno 5": notas[4]
}
maior = np.max(notas)

for k, v in alunos.items():
   if v == maior:
       print("O " + k + " teve como nota " + str(alunos.get(k)))
