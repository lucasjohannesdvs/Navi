#QUESTÃO 1
i = 1
num = 0
cont = 0
while i <= 5000000:
   num = num + 1

   if num%2 == 0 and num%37 == 0 and num%49 == 0:
       cont = cont + 1
       i = i + 1
   else:
       i = i + 1

print(cont)

