#QUESTÃO 2
import math
import numpy as np

vetor = []
i = 0
a = np.array(vetor)

while i < 10:
   if i%2 ==0:
       x = 3**i + 7*(math.factorial(i))
       i += 1
       vetor.append(x)
   else:
       x = 2**i + 4*math.log1p(i)
       i += 1
       vetor.append(x)

maximo = np.max(vetor)
media = np.average(vetor)

print("O maior valor é " + str(maximo))
print("O valor médio é " + str(media))

